# =============================================================
# TRADING CONFIGURATION
# =============================================================

# Symbols to track (NSE + BSE pairs)
# These are just examples - you can change them
SYMBOLS=RELIANCE,TCS,INFY,HDFCBANK,ICICIBANK

# =============================================================
# STRATEGY EVOLUTION SETTINGS
# =============================================================

# How many strategies to run in parallel (8 is good balance)
INITIAL_POPULATION_SIZE=8

# How often to evolve strategies (24 = daily)
EVOLUTION_INTERVAL_HOURS=24

# Retire bottom X% of strategies (0.25 = worst 25%)
RETIRE_BOTTOM_PERCENT=0.25

# Chance of mutation for surviving strategies
MUTATION_RATE=0.3

# =============================================================
# RISK MANAGEMENT (NEVER DISABLE THESE!)
# =============================================================

# Starting virtual capital (â‚¹1,00,000)
INITIAL_CAPITAL=100000.0

# Stop trading if daily loss exceeds this %
MAX_DAILY_LOSS_PERCENT=2.0

# Maximum trades per day
MAX_TRADES_PER_DAY=50

# Maximum % of capital in one position
MAX_POSITION_SIZE_PERCENT=10.0

# =============================================================
# MARKET HOURS (IST)
# =============================================================

MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=15
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=30
